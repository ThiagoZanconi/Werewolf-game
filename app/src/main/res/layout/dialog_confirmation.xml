<RelativeLayout
    android:id="@+id/dialogConfirmation"
    android:layout_width="240dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_dark_red_border"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:src="@drawable/image_black_wood_background"
        android:scaleType="fitXY"
        android:background="@drawable/shape_dark_red_border"
        app:shapeAppearanceOverlay="@style/CustomShapeAppearance"
        >
    </com.google.android.material.imageview.ShapeableImageView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="16dp"
        android:gravity="center"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/text_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:text="@string/proceed"
            android:fontFamily="@font/font_old_english_five"
            android:textSize="25sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_yes"
                android:fontFamily="@font/font_old_english_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/button_no"
                android:fontFamily="@font/font_old_english_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>