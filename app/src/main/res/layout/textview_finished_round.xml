<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/imageview_shape"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:src="@drawable/image_wood_textview_background"
        android:scaleType="fitXY"
        android:background="@drawable/imageview_shape"
        app:shapeAppearanceOverlay="@style/CustomShapeAppearance"
        >
    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/eventsSummaryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_old_english_five"
        android:justificationMode="inter_word"
        android:padding="50dp"
        android:layout_marginTop="25dp"
        android:text="@string/intro1"
        android:textColor="#000000"
        android:textSize="25sp" />

</RelativeLayout>