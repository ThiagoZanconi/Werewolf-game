<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        layout="@layout/imageview_background" />

    <FrameLayout
        android:id="@+id/playerHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonAbilityLayout">
        <include
            layout="@layout/shared_player_header" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttonAbilityLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playerHeader"
        app:layout_constraintBottom_toTopOf="@id/stalkedFrameLayout">
        <include
            layout="@layout/button_ability" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/stalkedFrameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonAbilityLayout"
        app:layout_constraintBottom_toTopOf="@id/confirmButtonLayout">
        <include layout="@layout/textview_stalked" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/confirmButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <include
            layout="@layout/button_confirm" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>